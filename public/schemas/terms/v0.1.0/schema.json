{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://localhost:300/schemas/terms/v0.1.0/schema.json",
  "name": "http://localhost:300/schemas/terms/v0.1.0/schema.json",
  "title": "Term",
  "titlePlural": "Terms and Conditions",
  "description": "Terms and Conditions of the Verida Incentivized Testnet initiative",
  "type": "object",
  "database": {
    "name": "terms",
    "indexes": {
      "insertedAt": ["insertedAt"]
    }
  },
  "allOf": [
    { "$ref": "https://core.schemas.verida.io/base/v0.1.0/schema.json" },
    {
      "properties": {
        "status": {
          "title": "Status",
          "type": "string",
          "enum": ["accepted", "rejected"]
        }
      },
      "required": ["status"]
    }
  ]
}
